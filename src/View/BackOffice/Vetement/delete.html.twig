{% extends "layout.html.twig" %}
{% block contenu %}
    <form method="post" action="{{ path('vetement.validFormDelete') }}">
        <div class="row">

            <fieldset>
                <legend>Confirmer la suppression du produit suivant : (avec twig)</legend>
                <input name="id"  type="hidden" value="{{donnees.id_vetement}}" />
                <label>Nom : <h5>{{donnees.descriptif}}</h5> </label>
                <input type="hidden" id="_method" name="_method" value="delete" />

                <input type="submit" name="supprimerVetement" value="Supprimer" />
                <input type="button" value="Annuler" onclick="history.back();"/>
            </fieldset>
        </div>
    </form>
{% endblock %}
